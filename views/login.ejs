        <!-- Custom styles for this template -->
        <link href="/public/css/loginStyle.css" rel="stylesheet">
    </head>
    <body class="login text-center">
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v9.0&appId=212973710282200&autoLogAppEvents=1" nonce="ZexUqHyA"></script>
    
        <main class="form-signin">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <img src="../public/assets/assets_1.jpg" class="rounded" width="450px" height="600px">
                    </div> 
                    <div class="col-5 rounded background-form"> 
                        <form action="/auth/login" method="post">
                            <img src="/public/assets/logo.png" alt="" width="140" height="140">
                            <h1 class="h3 mb-3 fw-normal" style="color: white;">Welcome to OnFitnes</h1>
                            <label for="inputEmail" class="visually-hidden">Email address</label>
                            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
                            <label for="inputPassword" class="visually-hidden">Password</label>
                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                            <a href="/auth/signup">Not a member? Sign up</a>
                            <hr style="color: white;">
                            <p style="color: white;">OR</p>
                            <div class="fb-login-button"><a href="/auth/facebook">Login with Facebook</a></div>
                            <% if (errors.length >0) {%>
                                <div class="alert alert-danger" role="alert"><%= errors %>
                                <% } %>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>  
    </body>
</html>
